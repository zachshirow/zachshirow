---
import type { SiteMeta } from "@/data/types";
import { siteConfig } from "@/site-config";
import "../styles/global.css";

type Props = SiteMeta;

const { title, description, image, articleDate } = Astro.props;

const titleSeparator = "â€¢";
const siteTitle = `${title} ${titleSeparator} ${siteConfig.title}`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
// const socialImageURL = new URL(ogImage ? ogImage : "/social-card.jpg", Astro.url).href;
const socialImageURL =  image ? (image !== "" ? image : "https://zachshirow.storage.iran.liara.space/social-card.jpg") : "https://zachshirow.storage.iran.liara.space/social-card.jpg"

---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<title>{siteTitle}</title>

<!-- Icons / Favicon -->
<link rel="icon" href="/icon.svg" type="image/svg+xml" />
<link rel="icon" href="/favicon-16x16.png" type="favicon" />
<link rel="icon" href="/favicon-32x32.png" type="favicon" />
<link rel="android-chrome192x192" href="/android-chrome-192x192.png" />
<link rel="android-chrome-512x512" href="/android-chrome-512x512.png" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.webmanifest" />
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<meta name="title" content={siteTitle} />
<meta name="description" content={description} />
<meta name="author" content={siteConfig.author} />

<!-- Theme Colour -->
<meta name="theme-color" content="#8B6CEF" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={articleDate ? "article" : "website"} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:site_name" content={siteConfig.title} />
<meta property="og:locale" content={siteConfig.ogLocale} />
<meta property="og:image" content={socialImageURL} />
<meta property="og:image:width" content="675" />
<meta property="og:image:height" content="540" />
{
	articleDate && (
		<>
			<meta property="article:author" content={siteConfig.author} />
			<meta property="article:published_time" content={articleDate} />
		</>
	)
}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImageURL} />

<!-- Sitemap -->
<link rel="sitemap" href="/sitemap-0.xml" />

<!-- RSS auto-discovery -->
<link rel="alternate" type="application/rss+xml" title={siteConfig.title} href="/rss.xml" />

<!-- Umami Analytics -->
<script async src="https://analytics.umami.is/script.js" data-website-id="4d07b72b-1b5a-4a9f-b6e7-e9cd1baa5259"></script>