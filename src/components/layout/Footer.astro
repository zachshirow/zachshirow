---
import { menuLinks, siteConfig } from "@/site-config";

const year = new Date().getFullYear();
---

<footer
	class="mt-auto flex w-full flex-col items-center justify-center gap-y-2 pb-4 pt-20 text-center align-top text-gray-500 sm:flex-row sm:justify-between sm:text-sm"
	id="main-footer"
>
	
	<div class="me-0 sm:me-4">
		<a class="sm:hover:text-textColor sm:hover:underline" referrerpolicy='origin' target='_blank' href='https://trustseal.enamad.ir/u?id=400800&Code=gr14tLk9BA8yMOaVdWMD3ltfUPEzP63g'><img referrerpolicy='origin' src='https://trustseal.enamad.ir/logo.aspx?id=400800&Code=gr14tLk9BA8yMOaVdWMD3ltfUPEzP63g' alt='' style='cursor:pointer' Code='gr14tLk9BA8yMOaVdWMD3ltfUPEzP63g'>اینماد</a>
		|
		<a href="https://zarinp.al/zachshirow" title="زرین پال من" class="sm:hover:text-textColor sm:hover:underline">زرین پال</a>
		|
		کپی رایت &copy; {year}{" "}
		{siteConfig.author}
	</div>
	<nav
		aria-label="More on this site"
		class="flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500"
	>
		{
			menuLinks.map((link) => (
				<a
					href={link.path}
					class="px-4 py-2 sm:px-2 sm:py-0 sm:hover:text-textColor sm:hover:underline"
				>
					{link.title}
				</a>
			))
		}
	</nav>
</footer>
